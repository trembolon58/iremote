<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_header_height"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/roomIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/accent" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ac000000"
        android:gravity="center_vertical"
        android:paddingLeft="58dp"
        android:text="bathroom"
        android:textColor="@color/icons"
        android:textSize="18sp" />

    <com.gc.materialdesign.views.ButtonFloatSmall
        android:id="@+id/bEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:background="@color/accent"
        materialdesign:iconDrawable="@android:drawable/ic_menu_edit" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#22000000">

        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/bRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/icons"
            android:text="@string/rooms" />
    </FrameLayout>

</RelativeLayout><!-- From: file:/C:/Android/iremote/app/src/main/res/layout/drawer_menu_header.xml -->